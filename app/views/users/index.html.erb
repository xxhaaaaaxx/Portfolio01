<h1>ユーザー一覧</h1>

<%= link_to '>>> 新規ユーザー登録', new_user_path %>

<table>

    <thead>
        <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= User.human_attribute_name(:password_digest) %></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do|user| %>

            <tr>
                <td><%= link_to user.name, user %></td>
                <!-- 「書籍名に詳細表示へのリンクをつける」 -->
                <td><%= user.email %></td>
                <td><%= user.password_digest %></td>

            <% if user == @current_user %>
                <td><%= link_to '編集', edit_user_path(user) %></td>
                <!-- 編集ボタン -->
                <td><%= link_to '削除', user, method: :delete, data: {confirm: "削除しますか？"} %></td>
                <!-- 削除ボタン -->
            <% end %>

            </tr>
        <% end %>
        
    </tbody>

</table>

